unit Descricao;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Padrao, JvComponentBase, JvEnterTab,
  Vcl.ComCtrls, Vcl.ExtCtrls, Vcl.StdCtrls, Vcl.Buttons;

type
  TfrmDescricao = class(TfrmPadrao)
    EdtDescricao: TEdit;
    btnSalvar: TSpeedButton;
    procedure btnSalvarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmDescricao: TfrmDescricao;

implementation

{$R *.dfm}

uses Main;

procedure TfrmDescricao.btnSalvarClick(Sender: TObject);
begin
  inherited;

  if EdtDescricao.Text <> '' then
  Begin
    frmMain.sDescricao := EdtDescricao.Text;
    Close;
  End
  Else
  Begin
    frmMain.sDescricao := '';
    Close;
  End;

end;

end.
