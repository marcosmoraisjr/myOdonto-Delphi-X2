{$R *.dfm}

{ TfrmRelFechamentoCaixa }

procedure TfrmRelFechamentoCaixa.MontaRelFechamento(IDCaixa : Integer);
begin
  lblEmpCab.Caption := Empresa.Nome + '( ' + Empresa.RazaoSocial + ' )';

  With qryAux do
    Begin
      Close;
      SQL.Clear;
      SQL.Add('SELECT CAIXAS.ID_CAIXAS, CAIXAS.ID_OPERADORES, CAIXAS.DTACAIXA, CAIXAS.DATAABERTURA, CAIXAS.DATAFECHAMENTO, CAIXAS.SALDOINICIAL, CAIXAS.NUMERO,');
      SQL.Add('CAIXAS.ABERTO, CAIXAS.OBSERVACOES, OPERADORES.NOME FROM CAIXAS ');
      SQL.Add('INNER JOIN OPERADORES ON CAIXAS.ID_OPERADORES = OPERADORES.ID_OPERADORES');
      SQL.Add('WHERE (CAIXAS.ID_CAIXAS = :pID)');
      Parameters.ParamByName('pID').Value := IDCaixa;
      Open;

      lblCaixaCab.Caption := 'Caixa: '+ FieldByName('DTACAIXA').AsString + ' - ' + FieldByName('NUMERO').AsString + ' - Responsável: ' + FieldByName('NOME').AsString + ' - Hora: ' + FormatDateTime('HH:MM:SS', Now);

      Close;
      SQL.Clear;
      SQL.Add('SELECT ID_CAIXAS, ID_OPERADOR, TIPODESPESA, ENTRADA_SAIDA, HISTORICO, DOCUMENTO, DATA,');
      SQL.Add('VLRENTRADA, VLRSAIDA FROM LCTOSCAIXA');
      SQL.Add('WHERE ID_CAIXAS = :pID');
      Open;

      qryRel.Close;
      qryRel.Open;

      while Not Eof do
        Begin

        End;
    End;
end;

end.
