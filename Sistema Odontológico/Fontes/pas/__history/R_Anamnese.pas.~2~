unit R_Anamnese;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, R_Padrao, Data.DB, Data.Win.ADODB,
  QRCtrls, QuickRpt, Vcl.ExtCtrls;

type
  TfrmRelAnamnese = class(TfrmRelatorioPadrao)
    QRGroup1: TQRGroup;
    ChildBand1: TQRChildBand;
    QRLabel3: TQRLabel;
    QRLabel4: TQRLabel;
    QRLabel5: TQRLabel;
    QRLabel6: TQRLabel;
    QRLabel7: TQRLabel;
    QRLabel8: TQRLabel;
    QRLabel9: TQRLabel;
    QRLabel10: TQRLabel;
    QRLabel11: TQRLabel;
    QRLabel12: TQRLabel;
    lblNomePaciente: TQRLabel;
    lblEndereco: TQRLabel;
    lblCidadePaciente: TQRLabel;
    lblTelResiPaciente: TQRLabel;
    lblCPF: TQRLabel;
    lblRG: TQRLabel;
    lblCelular: TQRLabel;
    lblCEP: TQRLabel;
    lblBairro: TQRLabel;
    lblDtNasc: TQRLabel;
    qryAux2: TADOQuery;
    QRLabel13: TQRLabel;
    QRShape3: TQRShape;
    QRLabel14: TQRLabel;
    QRShape4: TQRShape;
    QRShape5: TQRShape;
    QRLabel15: TQRLabel;
    QRLabel16: TQRLabel;
    QRBand4: TQRBand;
    qryRelAnamnse: TADOQuery;
    qryRelAnamnseID_PACIENETEANAMNESE: TIntegerField;
    qryRelAnamnsePergunta: TStringField;
    qryRelAnamnseAFIRMO: TStringField;
    qryRelAnamnseNEGO: TStringField;
    qryRelAnamnseNAOSEI: TStringField;
    qryRelAnamnseObservacao: TStringField;
    QRDBText1: TQRDBText;
    QRShape6: TQRShape;
    QRShape7: TQRShape;
    QRShape8: TQRShape;
    QRDBText2: TQRDBText;
    QRLabel17: TQRLabel;
    QRDBText3: TQRDBText;
